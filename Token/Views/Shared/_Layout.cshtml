            $.ajax({
                type: 'POST',
                async: true,
                url: '/Cajas/InsertCaja',
                dataType: 'json',
                data: { Clientes: $("#ClientesCaja").val(), Modelo: $("#ModeloCaja").val(), Operador: $("#OperadorCaja").val() },
