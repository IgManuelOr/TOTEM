        $('#DialogClientesAsociados').dialog({
            autoOpen: false,
            modal: true,
            title: 'Clientes Asociados',
            width: 600,
            open: function () {

                var IdCaja = $("#DialogClientesAsociados").data('IdCaja')
                //Busca una tabla correspondiente
